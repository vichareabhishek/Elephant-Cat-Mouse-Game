<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project1.csis.pace.edu.Project2.MainActivity">


    <ImageView android:id="@+id/fg1_title"

        android:layout_width="match_parent"
        android:src="@drawable/fg1_title"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="@android:dimen/app_icon_size" />

    <TextView android:id="@+id/cmpShow"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fg1_title"
        android:layout_marginLeft="20dp"
        android:text="Computer"
        android:textColor="#ff0000" />

    <TextView android:id="@+id/playerShow"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_below="@id/fg1_title"
        android:layout_marginRight="20dp"
        android:text="Player"
        android:textColor="#ff0000" />

    <ImageButton android:id="@+id/btnRock"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="ROCK"
        android:src="@drawable/elephant1"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/playerShow"
        android:layout_alignEnd="@+id/playerShow" />

    <ImageButton android:id="@+id/btnPaper"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="ROCK"
        android:src="@drawable/mouse1"
        android:layout_alignRight="@+id/btnRock"
        android:layout_alignEnd="@+id/btnRock"
        android:layout_alignLeft="@+id/btnRock"
        android:layout_alignStart="@+id/btnRock"
        android:layout_below="@+id/btnRock" />

    <ImageButton android:id="@+id/btnScissor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="ROCK"
        android:src="@drawable/cat1"
        android:layout_alignLeft="@+id/btnPaper"
        android:layout_alignStart="@+id/btnPaper"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:layout_below="@+id/btnPaper" />

    <ImageView
        android:id="@+id/viewCmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnPaper"
        android:layout_below="@id/cmpShow"
        android:layout_marginLeft="20dp"
        android:contentDescription="cmpViewDes" />

    <TextView android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewCmp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:textColor="#ff6ec7"
        android:text="result"
        android:textSize="15sp" />

    <TextView android:id="@+id/textCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textResult"
        android:layout_alignParentBottom="true"
        android:text="round:"
        android:textColor="#ff2400"
        android:textSize="15sp" />




</RelativeLayout>
